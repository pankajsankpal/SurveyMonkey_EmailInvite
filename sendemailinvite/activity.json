{
  "name": "sendemailinvite",
  "version": "0.0.1",
  "type": "flogo:activity",
  "ref": "github.com/pankajsankpal/SurveyMonkey_EmailInvite/sendemailinvite",
  "description": "activity description",
  "author": "The Dummies",
  "inputs":[
    {
      "name": "Survey Name",
      "type": "string",
	  "required": true
    },
	{
      "name": "AuthToken",
      "type": "string",
	  "required": true
    },
	{
      "name": "Sender's Email",
      "type": "string",
	  "required": true
    },
	{
      "name": "Type",
      "type": "string",
	  "allowed": [
        "invite",
        "reminder"
      ],
	  "value": "invite",
    "required": true
    },
    {
        "name": "Recipient Status",
        "type": "string",
        "allowed": [
            "has_not_responded",
            "partially_responded"
          ],
        "value": "has_not_responded"
    },
    {
      "name": "Recipient List",
      "type": "string"
    },
    {
      "name": "Subject",
      "type": "string"
    },
    {
      "name": "Body",
      "type": "string"
    }
  ]
}
